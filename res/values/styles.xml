<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
	
	<style name="DialogBaseTheme" parent="android:Theme.Holo.Light.Dialog">
		<!--
		    Theme customizations available in newer API levels can go in
		    res/values-vXX/styles.xml, while customizations related to
		    backward-compatibility can go here.
		-->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@null</item>
    </style>
    
    <!-- Dialog theme. -->
    <style name="DialogTheme" parent="DialogBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="TextAppearance.Menu.Title" parent="android:TextAppearance">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">56dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">left|bottom</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textColor">@color/grayColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/whiteColor</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
    </style>
    
    <style name="TextAppearance.Menu.Text" parent="android:TextAppearance">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">56dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textColor">@color/blackColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/whiteColor</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
    </style>

</resources>
